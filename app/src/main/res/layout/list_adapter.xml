<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:background="@drawable/ramka4"
        android:layout_weight="1"
        android:gravity="end"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <TextView
        android:gravity="center"
        android:id="@+id/title_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Номер попытки: "
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/title_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title_id"
        android:text="Время : "
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/title_mistake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ошибки : "
        app:layout_constraintTop_toBottomOf="@+id/title_time"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/title_countCorrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Уровни : "
        app:layout_constraintTop_toBottomOf="@+id/title_mistake"
        tools:ignore="MissingConstraints" />
    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@drawable/ramka4"
    android:orientation="vertical"
    tools:ignore="MissingConstraints">
    <TextView
        android:id="@+id/Set_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Номер попытки :"
        app:layout_constraintLeft_toRightOf="@+id/title_id"
        tools:ignore="MissingConstraints" />




    <TextView
        android:id="@+id/Set_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Время"
        app:layout_constraintTop_toBottomOf="@+id/title_id"
        app:layout_constraintLeft_toRightOf="@+id/title_time"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Set_mistakeCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Количество ошибок :"
        app:layout_constraintLeft_toRightOf="@+id/title_mistake"
        app:layout_constraintTop_toBottomOf="@+id/title_time"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/Set_countCorrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Количество ошибок :"
        app:layout_constraintLeft_toRightOf="@+id/title_countCorrect"
        app:layout_constraintTop_toBottomOf="@+id/Set_mistakeCount"
        tools:ignore="MissingConstraints" />
</LinearLayout>

</LinearLayout>
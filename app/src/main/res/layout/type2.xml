<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/linear1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="0dp"
        android:layout_weight="100">

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="text"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linear2"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100">

        <TextView
            android:id="@+id/answer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ramka"
            android:gravity="center"
            android:foregroundGravity="right"
            android:text=""
            android:textColor="@color/black"
            android:layout_weight=".100"

            />
        <TextView
            android:id="@+id/answer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/answer1"
            android:background="@drawable/ramka"
            android:gravity="center"
            android:foregroundGravity="right"
            android:text=""
            android:textColor="@color/black"
            android:layout_weight=".100"
            />
        <TextView
            android:id="@+id/answer3"
            android:layout_width="wrap_content"
            android:layout_below="@+id/answer2"
            android:layout_height="wrap_content"
            android:background="@drawable/ramka"
            android:gravity="center"
            android:foregroundGravity="right"
            android:text=""
            android:textColor="@color/black"
            android:layout_weight=".100"

            />
        <TextView
            android:id="@+id/answer4"
            android:layout_width="wrap_content"
            android:layout_below="@+id/answer3"
            android:layout_height="wrap_content"
            android:background="@drawable/ramka"
            android:gravity="center"
            android:foregroundGravity="right"
            android:text=""
            android:textColor="@color/black"
            android:layout_weight=".100"

            />

        <TextView
            android:id="@+id/check"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ramka"
            android:gravity="center"
            android:text="проверить"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />


    </RelativeLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100">

        <TextView
            android:id="@+id/variant1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="variant1"
            />




        <TextView
            android:id="@+id/variant2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_toRightOf="@+id/variant1"
            android:textColor="@color/white"
            android:text="variant2"
            />



        <TextView
            android:id="@+id/variant3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/variant1"
            android:textColor="@color/white"
            android:text="variant3"
            />






        <TextView
            android:id="@+id/variant4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_toRightOf="@+id/variant3"
            android:layout_below="@+id/variant1"
            android:textColor="@color/white"
            android:text="variant4"

            />



    </RelativeLayout>


</LinearLayout>